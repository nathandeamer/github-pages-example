swagger: "2.0"
info:
  description: "LPG SDET Test"
  version: "1.0.0"
  title: "LPG SDET"
host: "my-json-server.typicode.com"
basePath: "/nathandeamer/MyJsonServer"
schemes:
- "https"
paths:
  /citys:
    get:
      summary: "Get citys"
      produces:
      - "application/json"
      responses:
        "200":
          description: "successful operation"
          schema:
            type: "array"
            items:
              $ref: "#/definitions/City"
              
  /attractions:
    get:
      summary: "Get attractions"
      produces:
      - "application/json"
      parameters:
      - name: "cityId"
        in: "query"
        description: "City Id"
        required: false
        type: "integer"
        format: "int32"
      - name: "type"
        in: "query"
        description: "Type to filter by"
        required: false
        type: "string" 
        enum: [MUSEUM, OBSERVATORY]
      - name: "_sort"
        in: "query"
        description: "Field to sort by"
        required: false
        type: "string"  
        enum: [id, cityId, title, type, rating]
      - name: "_order"
        in: "query"
        description: "Order to sort by"
        required: false
        type: "string" 
        enum: [asc, desc]
      responses:
        "200":
          description: "successful operation"
          schema:
            type: "array"
            items:
              $ref: "#/definitions/Attraction"
              
definitions:
  City:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int32"
      title:
        type: "string"
  Attraction:
    type: "object"
    properties:
      id:
        type: "integer"
        format: "int32"
        example: 1
      cityId:
        type: "integer"
        format: "int32"
        example: 1
      title:
        type: "string"
      type:
        type: "string"
      rating:
        type: "number"
        format: "double"
        example: 4.5
